<!DOCTYPE html>
<html>
<head>
<title>ScholarshipBook</title>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                <span class="sr-only">Toggle Navbar</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to ScholarshipBook, root_path, :class => 'navbar-brand' %>

            <ul class="nav navbar-nav navbar-left">
            <li class="dropdown" id="flash-parent">
            <%= link_to '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown', :id => 'flash-drop' do %>
                    <span id="flash-link" <%= flash.count > 0 ? 'class="active"'.html_safe : '' %>><i class="fa fa-bell"></i> <span id="flash-counter"><%= flash.count %></span></span>
            <% end %>
                <ul class="dropdown-menu" id="flash-menu">
                    <% if flash.count > 0 %>
                        <%= bootstrap_flash %>
                <% else %>
                        <li id="flash-placeholder"><a href="#">No alerts for you!</a></li>
                <% end %>
                </ul>
                </li>

                <% if current_user %>
                    <li><%= link_to "Dashboard", root_path %></li>
                    <li><%= link_to 'Sign Out', sign_out_path %></li>
                 <% else %>
                    <li><%= link_to 'Sign In', sign_in_path %></li>
                    <li><%= link_to 'Sign Up', sign_up_path %></li>
                <% end %>
                <% if current_admin %>
                    <li><%= link_to "Users", users_path %></li>
                <% end %>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <%= yield %>
</div>
</body>
</html>
