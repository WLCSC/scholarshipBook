<h1>Front Page Messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.text %></td>
        <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-xs btn-warning' %></td>
        <td><%= link_to 'Remove', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Post New Message', new_message_path, class: 'btn btn-info' %>
