<h1>Judges for <%= @scholarship.title %></h1>

<%= form_for @scholarship do |f| %>
    <%= collection_check_boxes :scholarship, :judge_ids, Judge.all, :id, :name %>

    <br/>
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', @scholarship, :class => 'btn btn-warning' %>
<% end %>
